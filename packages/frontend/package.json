    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.7",
    "react-i18next": "^11.7.3",
    "react-router-dom": "^5.2.0",
    "reset-css": "^5.0.1",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
